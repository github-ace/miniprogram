/* pages/good_product/good_product.wxss */
.index_bg{ background: #fffbdd; height: 100vh;}
custom-title{ position: absolute; z-index: 10}
scroll-view{ position: relative; height: 100vh;  background: #fffbdd;padding-top: 300rpx;box-sizing: border-box;}
.top_img{ position: absolute; top: 0; width: 100%; height: 300rpx;z-index:10}
.product_list{ padding-bottom: 100rpx; display: flex; justify-content: space-evenly;align-items:start; position: absolute; width: 100%; font-size: 26rpx; color: #222;box-sizing:border-box}
.product_list_left,.product_list_right{ display: inline-block; width: 340rpx;}
.product_list_item{ padding-bottom:10rpx; overflow: hidden; display: inline-block; margin-top: 40rpx; background: #FFFCE6; border-radius: 8rpx;box-shadow:0px 3px 6px 0px rgba(247,242,204,0.8)}
.product_list_name{ margin: 5rpx 0; padding:0 10rpx}
.product_list_item_img{ width: 340rpx; height: 0; transition: all .3s}
.tjzs{ font-size: 22rpx; margin-right: 20rpx; padding-left: 10rpx}
.star_group{ display: inline-block}
.star_group image{ margin-right: 5rpx; width: 17rpx; height: 17rpx }

.tips{ position: absolute; bottom: 0rpx; width: 100%; text-align: center;color: #ccc;font-size: 26rpx;line-height: 100rpx; display: flex; align-items: center; justify-content: center}
.tips::before,.tips::after{ content: "";height:1rpx;width: 5em;background: #ccc; margin:0 20rpx }